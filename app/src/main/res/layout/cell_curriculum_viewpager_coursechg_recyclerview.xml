<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/ripple_default">
        <TextView
            android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <com.fly.tkuilife.view.MarqueeTextView
                android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="-"
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </com.fly.tkuilife.view.MarqueeTextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fly.tkuilife.view.MarqueeTextView
                    android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="-"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextSecondary">
                </com.fly.tkuilife.view.MarqueeTextView>
                <TextView
                    android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="-"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextSecondary">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center_horizontal"
        android:alpha="1"
        android:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#707070"
            android:layout_marginTop="5dp">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="原始課程："
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </TextView>
            <com.fly.tkuilife.view.MarqueeTextView
                android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="-"
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </com.fly.tkuilife.view.MarqueeTextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="異動結果："
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </TextView>
            <com.fly.tkuilife.view.MarqueeTextView
                android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="-"
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </com.fly.tkuilife.view.MarqueeTextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="生效日期："
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </TextView>
            <com.fly.tkuilife.view.MarqueeTextView
                android:id="@+id/cell_curriculum_viewpager_coursechg_recyclerview_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="-"
                android:textSize="15dp"
                android:textColor="@color/colorTextPrimary">
            </com.fly.tkuilife.view.MarqueeTextView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
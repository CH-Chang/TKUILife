<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/ripple_default"
    android:gravity="center_vertical">

    <com.fly.tkuilife.view.RoundImageView
        android:id="@+id/cell_newspaper_viewpager_gallery_recyclerview_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:radius="5dp"
        app:mode="round">
    </com.fly.tkuilife.view.RoundImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cell_newspaper_viewpager_gallery_recyclerview_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=""
            android:textSize="12dp"
            android:textColor="@color/colorTextSecondary">
        </TextView>

        <com.fly.tkuilife.view.MarqueeTextView
            android:id="@+id/cell_newspaper_viewpager_gallery_recyclerview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:singleLine="true"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever">
        </com.fly.tkuilife.view.MarqueeTextView>

        <TextView
            android:id="@+id/cell_newspaper_viewpager_gallery_recyclerview_photographer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/colorTextPrimary">
        </TextView>
    </LinearLayout>

</LinearLayout>
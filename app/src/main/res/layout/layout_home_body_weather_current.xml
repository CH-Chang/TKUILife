<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/home_body_weather_viewpager_current_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginTop="15dp"
        android:text="-"
        android:textSize="20dp"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/home_body_weather_viewpager_current_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="1dp"
            android:src="@drawable/ic_weather_day_no">
        </ImageView>
        <TextView
            android:id="@+id/home_body_weather_viewpager_current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="高溫 "
            android:textSize="18dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/home_body_weather_viewpager_current_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:text="低溫 "
            android:textSize="18dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/home_body_weather_viewpager_current_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="-"
            android:textSize="18dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/home_body_weather_viewpager_current_descripution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:marqueeRepeatLimit="-1"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:text="-"
        android:textSize="18dp"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center">
    </TextView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            android:elevation="4dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:fitsSystemWindows="true">
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_toolbar"
            android:padding="5dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Login"
                android:textSize="25dp"
                android:textColor="@color/colorTextPrimary"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:text="登入介面"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textColor="@color/colorTextPrimary"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_login_content"
            android:layout_below="@id/login_title"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:text="請填入以下資訊並進行淡江官網之驗證登入"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="姓名："
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18dp"></TextView>

                <EditText
                    android:id="@+id/login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="請點擊此處輸入姓名"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="身分："
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/login_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="請點擊此處選擇"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:focusable="true">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="年級："
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/login_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="請點擊此處選擇"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:focusable="true">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="學院："
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/login_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="請點擊此處選擇"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:focusable="true">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="系所："
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/login_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="請點擊此處選擇"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:focusable="true">
                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/login_connect"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_login_connect"
                android:padding="1dp"
                android:text="驗證登入"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="15dp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="1dp"
                android:text="本應用程式非官方應用程式並不保存用戶之帳戶及密碼資訊，本次資料僅供聯網驗證單次使用，若有疑慮請勿使用本程式。"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="8dp"></TextView>

        </LinearLayout>
        <WebView
            android:id="@+id/login_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </WebView>
    </RelativeLayout>

</ScrollView>
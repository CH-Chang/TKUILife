<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/cell_news_viewpager_event_recyclerview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_default">
        <com.fly.tkuilife.view.MarqueeTextView
            android:id="@+id/cell_news_viewpager_event_recyclerview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/colorTextPrimary">
        </com.fly.tkuilife.view.MarqueeTextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.fly.tkuilife.view.MarqueeTextView
                android:id="@+id/cell_news_viewpager_event_recyclerview_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/colorTextSecondary">
            </com.fly.tkuilife.view.MarqueeTextView>
            <TextView
                android:id="@+id/cell_news_viewpager_event_recyclerview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="15dp"
                android:textColor="@color/colorTextSecondary">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cell_news_viewpager_event_recyclerview_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center_horizontal"
        android:alpha="1"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#707070"
                android:layout_marginTop="5dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="活動對象："
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </TextView>
                <TextView
                    android:id="@+id/cell_news_viewpager_event_recyclerview_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="活動地點："
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </TextView>
                <com.fly.tkuilife.view.MarqueeTextView
                    android:id="@+id/cell_news_viewpager_event_recyclerview_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </com.fly.tkuilife.view.MarqueeTextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="活動時間："
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </TextView>
                <com.fly.tkuilife.view.MarqueeTextView
                    android:id="@+id/cell_news_viewpager_event_recyclerview_classtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="學生"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </com.fly.tkuilife.view.MarqueeTextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="報名時間："
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </TextView>
                <com.fly.tkuilife.view.MarqueeTextView
                    android:id="@+id/cell_news_viewpager_event_recyclerview_signtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary">
                </com.fly.tkuilife.view.MarqueeTextView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="5dp"
                    android:text="圖書資訊"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center">

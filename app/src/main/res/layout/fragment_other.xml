<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fadingEdge="none"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorBackgroundHeader"
            android:orientation="vertical"
            android:gravity="center">

            <com.fly.tkuilife.view.RoundImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:layout_weight="3"
                android:src="@drawable/ic_news"
                android:background="@drawable/shape_other_icon"
                app:mode="circle">
            </com.fly.tkuilife.view.RoundImageView>

            <TextView
                android:id="@+id/other_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/colorTextOtherName"
                android:textAlignment="center"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/other_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/other_wifi"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/ripple_default">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="@color/colorIconTint">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="5dp"
                    android:text="淡江網路"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:src="@drawable/ic_arrowright"
                android:tint="@color/colorIconTint">
            </ImageView>

        </LinearLayout>
        <LinearLayout

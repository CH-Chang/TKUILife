            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:src="@drawable/ic_arrowright"
                android:tint="@color/colorIconTint">
            </ImageView>

        </LinearLayout>
        <LinearLayout

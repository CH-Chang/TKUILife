<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/curriculum_viewpager_timetable_swiperefreshlayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBackground">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週一"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週二"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週三"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週四"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週五"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週六"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="週日"
                    android:textSize="15dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textAlignment="center"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="01"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="02"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="03"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="04"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="05"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="06"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="07"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="08"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="09"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>
                <RelativeLayout
                    android:id="@+id/curriculum_viewpager_timetable_week7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
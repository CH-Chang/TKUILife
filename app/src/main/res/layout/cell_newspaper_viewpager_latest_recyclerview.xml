<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/ripple_default"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="1dp">
        <TextView
            android:id="@+id/cell_newspaper_viewpager_latest_recyclerview_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=""
            android:textSize="12dp"
            android:textColor="@color/colorTextSecondary">
        </TextView>
        <TextView
            android:id="@+id/cell_newspaper_viewpager_latest_recyclerview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text=""
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:singleLine="true"
            android:ellipsize="end">
        </TextView>
        <TextView
            android:id="@+id/cell_newspaper_viewpager_latest_recyclerview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="請點入以查看詳細內容"
            android:textSize="12dp"
            android:textColor="@color/colorTextSecondary">
        </TextView>
    </LinearLayout>

    <com.fly.tkuilife.view.RoundImageView
        android:id="@+id/cell_newspaper_viewpager_latest_recyclerview_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:radius="5dp"
        app:mode="round">
    </com.fly.tkuilife.view.RoundImageView>



</LinearLayout>
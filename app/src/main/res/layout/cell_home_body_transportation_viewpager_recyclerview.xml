<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/ripple_default"
    android:focusable="true"
    android:clickable="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/cell_home_body_transportation_viewpager_recyclerview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@drawable/ic_bus"
            android:tint="@color/colorIconTint">
        </ImageView>
        <TextView
            android:id="@+id/cell_home_body_transportation_viewpager_recyclerview_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/colorTextPrimary"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/cell_home_body_transportation_viewpager_recyclerview_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="10dp"
            android:textColor="@color/colorTextSecondary"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/cell_home_body_transportation_viewpager_recyclerview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="讀取中"
        android:textSize="15dp"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center">
    </TextView>


</LinearLayout>